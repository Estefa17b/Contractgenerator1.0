            // Mostrar/ocultar campos adicionales
            includeIdoneityCheck.addEventListener('change', function() {
                if (this.checked) {
                    idoneityField.classList.remove('hidden');
                } else {
                    idoneityField.classList.add('hidden');
                }
                updatePreview();
            });
            
            includeAttorneyPositionCheck.addEventListener('change', function() {
                if (this.checked) {
                    attorneyPositionField.classList.remove('hidden');
                } else {
                    attorneyPositionField.classList.add('hidden');
                }
                updatePreview();
            });
            
            includeGranterAddressCheck.addEventListener('change', function() {
                if (this.checked) {
                    granterAddressField.classList.remove('hidden');
                } else {
                    granterAddressField.classList.add('hidden');
                }
                updatePreview();
            });
            
            includeLogo.addEventListener('change', function() {
                if (this.checked) {
                    logoField.classList.remove('hidden');
                } else {
                    logoField.classList.add('hidden');
                    logoContainer.classList.add('hidden');
                }
            });
            
            logoInput.addEventListener('change', function(e) {
                if (e.target.files && e.target.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        logoImage.src = e.target.result;
                        logoContainer.classList.remove('hidden');
                    };
                    reader.readAsDataURL(e.target.files[0]);
                }
            });
            
            logoSizeSmall.addEventListener('click', function() {
                logoImage.style.width = '50px';
            });
            
            logoSizeMedium.addEventListener('click', function() {
                logoImage.style.width = '75px';
            });
            
            logoSizeLarge.addEventListener('click', function() {
                logoImage.style.width = '100px';
            });
            
            logoRemove.addEventListener('click', function() {
                logoContainer.classList.add('hidden');
                logoInput.value = '';
            });
            
            entityTypeSelect.addEventListener('change', function() {
                if (this.value === 'Otro') {
                    otherEntityTypeField.classList.remove('hidden');
                } else {
                    otherEntityTypeField.classList.add('hidden');
                }
                updatePreview();
            });
            
            orgTypeSelect.addEventListener('change', function() {
                if (this.value === 'Otro') {
                    otherOrgTypeField.classList.remove('hidden');
                } else {
                    otherOrgTypeField.classList.add('hidden');
                }
                updatePreview();
            });
            
            // Función para formatear la fecha
            function formatDate(dateString) {
                if (!dateString) return '[FECHA]';
                
                const date = new Date(dateString);
                const day = date.getDate();
                const month = date.getMonth();
                const year = date.getFullYear();
                
                const months = [
                    'enero', 'febrero', 'marzo', 'abril', 'mayo', 'junio',
                    'julio', 'agosto', 'septiembre', 'octubre', 'noviembre', 'diciembre'
                ];
                
                return `${day} de ${months[month]} de ${year}`;
            }
            
            // Función para obtener el texto del estado civil según el género
            function getMaritalStatusText(status, gender) {
                const isFemale = gender === 'femenino';
                
                switch (status) {
                    case 'soltero':
                        return isFemale ? 'soltera' : 'soltero';
                    case 'casado':
                        return isFemale ? 'casada' : 'casado';
                    case 'divorciado':
                        return isFemale ? 'divorciada' : 'divorciado';
                    case 'viudo':
                        return isFemale ? 'viuda' : 'viudo';
                    case 'unido':
                        return isFemale ? 'en unión libre' : 'en unión libre';
                    case 'separado':
                        return isFemale ? 'separada' : 'separado';
                    default:
                        return '';
                }
            }
            
            // Actualizar la vista previa
            function updatePreview() {
                // Entidad seleccionada
                const selectedEntity = entityTypeSelect.value;
                previewEntityHeader.textContent = selectedEntity === 'Otro' ? otherEntityTypeInput.value.toUpperCase() : selectedEntity;
                
                // Ocultar el parent de la entidad si no es DGI
                if (selectedEntity === 'DIRECCIÓN GENERAL DE INGRESOS') {
                    previewEntityParent.textContent = 'MINISTERIO DE ECONOMÍA Y FINANZAS';
                    previewEntityParent.classList.remove('hidden');
                } else if (selectedEntity === 'AUTORIDAD NACIONAL DE ADUANAS') {
                    previewEntityParent.textContent = 'MINISTERIO DE ECONOMÍA Y FINANZAS';
                    previewEntityParent.classList.remove('hidden');
                } else {
                    previewEntityParent.classList.add('hidden');
                }
                
                // Datos del poderdante
                previewGranterName.textContent = granterNameInput.value ? granterNameInput.value.toUpperCase() : '[NOMBRE DEL PODERDANTE]';
                previewGranterName2.textContent = granterNameInput.value ? granterNameInput.value.toUpperCase() : '[NOMBRE DEL PODERDANTE]';
                
                // Género del poderdante
                const granterGender = granterGenderSelect.value;
                if (granterGender === 'femenino') {
                    previewGranterGenderText.textContent = 'mujer';
                    previewGranterNationality.textContent = 'panameña';
                    previewGranterIdPrefix.textContent = 'portadora';
                    previewGranterPrefix.textContent = 'a la';
                    previewGranterTitle.textContent = 'Licenciada';
                } else {
                    previewGranterGenderText.textContent = 'varón';
                    previewGranterNationality.textContent = 'panameño';
                    previewGranterIdPrefix.textContent = 'portador';
                    previewGranterPrefix.textContent = 'al';
                    previewGranterTitle.textContent = 'Licenciado';
                }
                
                // Tipo de identificación del poderdante
                const granterIdType = granterIdTypeSelect.value;
                if (granterIdType === 'cédula') {
                    previewGranterIdType.textContent = 'cédula de identidad personal';
                } else if (granterIdType === 'pasaporte') {
                    previewGranterIdType.textContent = 'pasaporte';
                } else {
                    previewGranterIdType.textContent = 'carnet de residencia';
                }
                
                // Número de identificación del poderdante
                previewGranterId.textContent = granterIdInput.value ? granterIdInput.value.toUpperCase() : '[NÚMERO DE IDENTIFICACIÓN]';
                previewGranterId2.textContent = granterIdInput.value ? granterIdInput.value.toUpperCase() : '[NÚMERO DE IDENTIFICACIÓN]';
                
                // Domicilio del poderdante
                if (includeGranterAddressCheck.checked) {
                    previewGranterAddressContainer.classList.remove('hidden');
                    previewGranterAddress.textContent = granterAddressInput.value ? granterAddressInput.value.toUpperCase() : '[DOMICILIO]';
                } else {
                    previewGranterAddressContainer.classList.add('hidden');
                }
                
                // Datos del apoderado
                previewAttorneyName.textContent = attorneyNameInput.value ? attorneyNameInput.value.toUpperCase() : '[NOMBRE DEL APODERADO]';
                previewAttorneyName2.textContent = attorneyNameInput.value ? attorneyNameInput.value.toUpperCase() : '[NOMBRE DEL APODERADO]';
                previewAttorneyName3.textContent = attorneyNameInput.value ? attorneyNameInput.value.toUpperCase() : '[NOMBRE DEL APODERADO]';
                
                // Profesión del apoderado
                previewAttorneyProfession.textContent = attorneyProfessionInput.value ? attorneyProfessionInput.value.toUpperCase() : '[PROFESIÓN]';
                
                // Tipo de identificación del apoderado
                const attorneyIdType = attorneyIdTypeSelect.value;
                if (attorneyIdType === 'cédula') {
                    previewAttorneyIdType.textContent = 'cédula de identidad personal';
                } else if (attorneyIdType === 'pasaporte') {
                    previewAttorneyIdType.textContent = 'pasaporte';
                } else {
                    previewAttorneyIdType.textContent = 'carnet de residencia';
                }
                
                // Número de identificación del apoderado
                previewAttorneyId.textContent = attorneyIdInput.value ? attorneyIdInput.value.toUpperCase() : '[NÚMERO DE IDENTIFICACIÓN]';
                previewAttorneyId2.textContent = attorneyIdInput.value ? attorneyIdInput.value.toUpperCase() : '[NÚMERO DE IDENTIFICACIÓN]';
                
                // Domicilio del apoderado
                previewAttorneyAddress.textContent = attorneyAddressInput.value ? attorneyAddressInput.value.toUpperCase() : '[DOMICILIO]';
                
                // Género del apoderado
                const attorneyGender = attorneyGenderSelect.value;
                if (attorneyGender === 'femenino') {
                    previewAttorneyGenderText.textContent = 'mujer';
                    previewAttorneyNationality.textContent = 'panameña';
                    previewAttorneyIdPrefix.textContent = 'portadora';
                    previewAttorneyPrefix.textContent = 'a la';
                    previewAttorneyTitle.textContent = 'Licenciada';
                    previewAttorneyPowersPrefix.textContent = 'La';
                    previewAttorneyPowersTitle.textContent = 'Licenciada';
                    previewAttorneyPowersGender.textContent = 'facultada';
                } else {
                    previewAttorneyGenderText.textContent = 'varón';
                    previewAttorneyNationality.textContent = 'panameño';
                    previewAttorneyIdPrefix.textContent = 'portador';
                    previewAttorneyPrefix.textContent = 'al';
                    previewAttorneyTitle.textContent = 'Licenciado';
                    previewAttorneyPowersPrefix.textContent = 'El';
                    previewAttorneyPowersTitle.textContent = 'Licenciado';
                    previewAttorneyPowersGender.textContent = 'facultado';
                }
                
                // Mostrar/ocultar número de idoneidad
                if (includeIdoneityCheck.checked) {
                    previewAttorneyIdoneityContainer.classList.remove('hidden');
                    previewAttorneyIdoneity.textContent = attorneyIdoneityInput.value ? attorneyIdoneityInput.value.toUpperCase() : '[NÚMERO DE IDONEIDAD]';
                } else {
                    previewAttorneyIdoneityContainer.classList.add('hidden');
                }
                
                // Mostrar/ocultar cargo del apoderado
                if (includeAttorneyPositionCheck.checked) {
                    previewAttorneyPositionContainer.classList.remove('hidden');
                    previewAttorneyPosition.textContent = attorneyPositionInput.value ? attorneyPositionInput.value.toUpperCase() : '[CARGO]';
                    previewAttorneyPosition2.textContent = attorneyPositionInput.value ? attorneyPositionInput.value.toUpperCase() : '[CARGO]';
                } else {
                    previewAttorneyPositionContainer.classList.add('hidden');
                    previewAttorneyPosition2.textContent = attorneyProfessionInput.value ? attorneyProfessionInput.value.toUpperCase() : '[PROFESIÓN]';
                }
                
                // Mostrar/ocultar información de la organización
                if (includeOrganizationCheck.checked) {
                    // Tipo de organización
                    let orgTypeText = '';
                    if (orgTypeSelect.value === 'Otro' && otherOrgTypeInput.value) {
                        orgTypeText = otherOrgTypeInput.value.toUpperCase();
                    } else if (orgTypeSelect.value) {
                        orgTypeText = orgTypeSelect.value.toUpperCase();
                    } else {
                        orgTypeText = '[TIPO DE ORGANIZACIÓN]';
                    }
                    previewEntityType.textContent = orgTypeText;
                    previewEntityType2.textContent = orgTypeText.toLowerCase();
                    
                    const entityName = entityNameInput.value ? entityNameInput.value.toUpperCase() : '[NOMBRE DE ORGANIZACIÓN]';
                    previewEntityName2.textContent = entityName;
                    previewEntityName3.textContent = entityName;
                    previewEntityName4.textContent = entityName;
                    previewEntityName5.textContent = entityName;
                    
                    previewRegistrationNumber.textContent = registrationNumberInput.value ? registrationNumberInput.value.toUpperCase() : '[REGISTRO]';
                    previewOrgAddress.textContent = orgAddressInput.value ? orgAddressInput.value.toUpperCase() : '[DOMICILIO DE ORGANIZACIÓN]';
                }
                
                // Tipo de poder
                const powerType = powerTypeSelect.value;
                if (powerType === 'general') {
                    previewPowerTypeText.textContent = 'PODER GENERAL';
                } else {
                    previewPowerTypeText.textContent = 'PODER ESPECIAL';
                }
                
                // Objeto del poder
                previewPowerScope.textContent = powerScopeInput.value ? powerScopeInput.value.toUpperCase() : 'PRESENTE Y GESTIONE, ANTE LA DIRECCIÓN GENERAL DE INGRESOS DEL MINISTERIO DE ECONOMÍA Y FINANZAS, LA SOLICITUD DE AUTORIZACIÓN DE RECIBIR DONACIONES DEDUCIBLES DEL IMPUESTO SOBRE LA RENTA DE LOS ORGANISMO SIN FINES DE LUCRO';
                
                // Fecha y lugar (sin negrita y en minúsculas)
                previewGrantDate.textContent = grantDateInput.value ? formatDate(grantDateInput.value) : '[fecha]';
                previewGrantPlace.textContent = grantPlaceInput.value ? grantPlaceInput.value : '[lugar]';
            }
            
            // Mostrar/ocultar campos de organización
            includeOrganizationCheck.addEventListener('change', function() {
                if (this.checked) {
                    organizationFields.classList.remove('hidden');
                } else {
                    organizationFields.classList.add('hidden');
                }
                updatePreview();
            });
            
            // Generar documento
            generateBtn.addEventListener('click', function() {
                previewPlaceholder.classList.add('hidden');
                documentPreview.classList.remove('hidden');
                documentActions.classList.remove('hidden');
                editorToolbar.classList.remove('hidden');
                updatePreview();
            });
            
            // Imprimir documento
            printBtn.addEventListener('click', function() {
                // Crear una copia del documento para imprimir
                const printContent = documentPreview.cloneNode(true);
                printContent.style.fontFamily = "'Times New Roman', Times, serif";
                printContent.style.fontSize = "12pt";
                
                const printWindow = window.open('', '_blank');
                printWindow.document.write(`
                    <!DOCTYPE html>
                    <html>
                    <head>
                        <title>Poder Legal</title>
                        <style>
                            body {
                                font-family: 'Times New Roman', Times, serif;
                                font-size: 12pt;
                                line-height: 1.5;
                                padding: 1cm;
                            }
                            .body-paragraph {
                                text-align: justify;
                                margin-bottom: 1em;
                            }
                            .filled-data {
                                font-weight: bold;
                            }
                            .signature-line {
                                width: 100%;
                                border-bottom: 1px solid #000;
                                margin-bottom: 8px;
                            }
                            .date-place-text {
                                font-weight: normal;
                            }
                            @page {
                                size: legal;
                                margin: 2cm;
                            }
                        </style>
                    </head>
                    <body>
                        ${printContent.innerHTML}
                    </body>
                    </html>
                `);
                printWindow.document.close();
                printWindow.focus();
                setTimeout(function() {
                    printWindow.print();
                    printWindow.close();
                }, 500);
            });
            
            // Descargar como PDF
            downloadPdfBtn.addEventListener('click', function() {
                const element = document.getElementById('documentPreview');
                const opt = {
                    margin: [1, 1, 1, 1],
                    filename: 'poder_legal.pdf',
                    image: { type: 'jpeg', quality: 0.98 },
                    html2canvas: { scale: 2 },
                    jsPDF: { unit: 'in', format: 'legal', orientation: 'portrait' },
                    pagebreak: { mode: 'avoid-all' }
                };
                
                html2pdf().set(opt).from(element).save();
            });
            
            // Copiar al portapapeles
            copyBtn.addEventListener('click', function() {
                const content = document.getElementById('documentPreview').innerText;
                navigator.clipboard.writeText(content).then(function() {
                    alert('Documento copiado al portapapeles');
                }, function(err) {
                    console.error('Error al copiar: ', err);
                });
            });
            
            // Descargar como Word (simulado)
            downloadWordBtn.addEventListener('click', function() {
                const header = `
                    <html xmlns:o='urn:schemas-microsoft-com:office:office' 
                          xmlns:w='urn:schemas-microsoft-com:office:word' 
                          xmlns='http://www.w3.org/TR/REC-html40'>
                    <head>
                        <meta charset='utf-8'>
                        <title>Poder Legal</title>
                        <style>
                            body {
                                font-family: 'Times New Roman', Times, serif;
                                font-size: 12pt;
                                line-height: 1.5;
                            }
                            .body-paragraph {
                                text-align: justify;
                                margin-bottom: 1em;
                            }
                            .filled-data {
                                font-weight: bold;
                            }
                            .signature-line {
                                width: 100%;
                                border-bottom: 1px solid #000;
                                margin-bottom: 8px;
                            }
                            .date-place-text {
                                font-weight: normal;
                            }
                            @page {
                                size: legal;
                                margin: 2cm;
                            }
                        </style>
                    </head>
                    <body>
                `;
                const footer = "</body></html>";
                const sourceHTML = header + document.getElementById('documentPreview').innerHTML + footer;
                
                const source = 'data:application/vnd.ms-word;charset=utf-8,' + encodeURIComponent(sourceHTML);
                const fileDownload = document.createElement("a");
                document.body.appendChild(fileDownload);
                fileDownload.href = source;
                fileDownload.download = 'poder_legal.doc';
                fileDownload.click();
                document.body.removeChild(fileDownload);
            });
            
            // Abrir en Google Docs (simulado)
            googleDocsBtn.addEventListener('click', function() {
                alert('Esta función requiere integración con Google Docs API. Por favor, copie el contenido y péguelo en un documento de Google Docs.');
            });
            
            // Funciones de edición de texto
            
            // Función para aplicar formato al texto seleccionado
            function execFormatCommand(command, value = null) {
                document.execCommand(command, false, value);
            }
            
            // Botón de negrita
            boldBtn.addEventListener('click', function() {
                execFormatCommand('bold');
                this.classList.toggle('active');
            });
            
            // Botón de cursiva
            italicBtn.addEventListener('click', function() {
                execFormatCommand('italic');
                this.classList.toggle('active');
            });
            
            // Botón de subrayado
            underlineBtn.addEventListener('click', function() {
                execFormatCommand('underline');
                this.classList.toggle('active');
            });
            
            // Selector de fuente
            fontFamilySelect.addEventListener('change', function() {
                const editableElements = document.querySelectorAll('.editable-content');
                editableElements.forEach(el => {
                    el.style.fontFamily = this.value;
                });
            });
            
            // Selector de tamaño de fuente
            fontSizeSelect.addEventListener('change', function() {
                const editableElements = document.querySelectorAll('.editable-content');
                editableElements.forEach(el => {
                    el.style.fontSize = this.value;
                });
            });
            
            // Selector de interlineado
            lineHeightSelect.addEventListener('change', function() {
                const editableElements = document.querySelectorAll('.editable-content');
                editableElements.forEach(el => {
                    el.style.lineHeight = this.value;
                });
            });
            
            // Botón de alineación a la izquierda
            alignLeftBtn.addEventListener('click', function() {
                execFormatCommand('justifyLeft');
                alignLeftBtn.classList.add('active');
                alignCenterBtn.classList.remove('active');
                alignJustifyBtn.classList.remove('active');
            });
            
            // Botón de centrado
            alignCenterBtn.addEventListener('click', function() {
                execFormatCommand('justifyCenter');
                alignCenterBtn.classList.add('active');
                alignLeftBtn.classList.remove('active');
                alignJustifyBtn.classList.remove('active');
            });
            
            // Botón de justificado
            alignJustifyBtn.addEventListener('click', function() {
                execFormatCommand('justifyFull');
                alignJustifyBtn.classList.add('active');
                alignLeftBtn.classList.remove('active');
                alignCenterBtn.classList.remove('active');
            });
            
            // Visor de código HTML
            viewCodeBtn.addEventListener('click', function() {
                const htmlCode = document.documentElement.outerHTML;
                htmlCodeContainer.textContent = htmlCode;
                htmlCodeModal.style.display = 'block';
            });
            
            copyCodeBtn.addEventListener('click', function() {
                const codeText = htmlCodeContainer.textContent;
                navigator.clipboard.writeText(codeText).then(function() {
                    alert('Código HTML copiado al portapapeles');
                }, function(err) {
                    console.error('Error al copiar: ', err);
                });
            });
            
            closeCodeBtn.addEventListener('click', function() {
                htmlCodeModal.style.display = 'none';
            });
            
            // Cerrar modal al hacer clic fuera del contenido
            window.addEventListener('click', function(event) {
                if (event.target === htmlCodeModal) {
                    htmlCodeModal.style.display = 'none';
                }
            });
            
            // Hacer que todos los campos de entrada actualicen la vista previa
            const allInputs = document.querySelectorAll('input, textarea, select');
            allInputs.forEach(input => {
                input.addEventListener('input', updatePreview);
                input.addEventListener('change', updatePreview);
            });
            
            // Hacer que todos los checkboxes actualicen la vista previa
            const allCheckboxes = document.querySelectorAll('input[type="checkbox"]');
            allCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updatePreview);
            });
            
            // Inicializar la vista previa con valores por defecto
            updatePreview();
            
            // Establecer justificado como predeterminado para los párrafos
            alignJustifyBtn.classList.add('active');
            alignLeftBtn.classList.remove('active');
            
            // Establecer la fecha actual por defecto
            const today = new Date();
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0');
            const day = String(today.getDate()).padStart(2, '0');
            grantDateInput.value = `${year}-${month}-${day}`;
        });
    </script>
